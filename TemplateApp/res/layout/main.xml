<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#454545"
	android:id="@+id/root">

	<include layout="@layout/header" />

	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
		
		<Button android:id="@+id/fetch_partidosJugados" android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:onClick="onFetchPartidosJugadosClick"
		      android:text="@string/fetch_partidosJugados_button" />
		
	</LinearLayout>
	
	<ListView android:id="@+id/contacts_list" android:layout_width="fill_parent"
	          android:layout_height="fill_parent" />
</LinearLayout>
